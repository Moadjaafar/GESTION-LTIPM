                            <span class="pe-nav-content">Réservations</span>
                        </a>
                    </li>

                    <!-- Validation & Voyages (Trans_Respo only) -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Trans_Respo"))
                    {
                        <li class="pe-slide pe-has-sub">
                            <a asp-controller="Voyage" asp-action="Index" class="pe-nav-link">
                                <i class="ri-route-line pe-nav-icon"></i>
                                <span class="pe-nav-content">Validation & Voyages</span>
                            </a>
                        </li>

                        <li class="pe-slide pe-has-sub">
                            <a asp-controller="EtatSuiviTransport" asp-action="Index" class="pe-nav-link">
                                <i class="ri-truck-line pe-nav-icon"></i>
                                <span class="pe-nav-content">État Transports Stock</span>
                            </a>
                        </li>

                        <li class="pe-slide pe-has-sub">
                            <a asp-controller="EtatSuiviMaree" asp-action="Index" class="pe-nav-link">
                                <i class="ri-ship-line pe-nav-icon"></i>
                                <span class="pe-nav-content">État Suivi Marées RSW</span>
                            </a>
                        </li>
                    }

                    <!-- Administration (Admin only) -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="pe-slide pe-has-sub">
                            <a asp-controller="User" asp-action="Index" class="pe-nav-link">
                                <i class="ri-user-line"></i>
                                <span class="pe-nav-content">Utilisateurs</span>
                            </a>
                        </li>

                        <li class="pe-slide pe-has-sub">
                            <a asp-controller="Society" asp-action="Index" class="pe-nav-link">
                                <i class="ri-building-line"></i>
                                <span class="pe-nav-content">Sociétés</span>
                            </a>
                        </li>

                        <li class="pe-slide pe-has-sub">
                            <a asp-controller="Camion" asp-action="Index" class="pe-nav-link">
                                <i class="ri-truck-line"></i>
                                <span class="pe-nav-content">Camions</span>
                            </a>
                        </li>

                    }

                    <!-- Déconnexion -->
                    <li class="pe-slide pe-has-sub">
                        <a href="javascript:void(0)" onclick="document.getElementById('logoutForm').submit()" class="pe-nav-link">
                            <i class="ri-logout-box-line"></i>
                            <span class="pe-nav-content">Déconnexion</span>
                        </a>
                    </li>

                </ul>
            </nav>
        </aside>
        <div class="sidebar-backdrop" id="sidebar-backdrop"></div>
        <main class="app-wrapper pt-3">
            <div class="container-fluid maincnt  mt-3">
                @RenderBody()
            </div>

            <!-- Submit Section -->
        </main>

