@model IEnumerable<GESTION_LTIPN.Models.Booking>

@{
    ViewData["Title"] = "Réservations";
}

<div class="row">
    <div class="col-12 mx-auto">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="card-title mb-0">Liste des réservations</h4>
                @if (User.IsInRole("Admin") || User.IsInRole("Booking_Agent"))
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="ri-add-line me-1"></i> Nouvelle réservation
                    </a>
                }
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Référence</th>
                                <th>Numéro BK</th>
                                <th>Société</th>
                                <th>Type de voyage</th>
                                <th>Nbr LTC</th>
                                <th>Statut</th>
                                <th>Créé le</th>
                                <th>Créé par</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong class="text-primary">@item.BookingReference</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@item.Numero_BK</span>
                                        </td>
                                        <td>@item.Society?.SocietyName</td>
                                        <td>@item.TypeVoyage</td>
                                        <td>
                                            <strong>@item.Nbr_LTC</strong>
                                        </td>
                                        <td>
                                            @switch (item.BookingStatus)
                                            {
                                                case "Pending":
                                                    <span class="badge bg-warning">En attente</span>
                                                    break;
                                                case "Validated":
                                                    <span class="badge bg-success">Validée</span>
                                                    break;
                                                case "Completed":
                                                    <span class="badge bg-primary">Complétée</span>
                                                    break;
                                                case "Cancelled":
                                                    <span class="badge bg-danger">Annulée</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@item.CreatedByUser?.Username</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-outline-primary" title="Détails">
                                                <i class="ri-eye-line"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center py-5">
                                        <i class="ri-inbox-line fs-1 text-muted d-block mb-2"></i>
                                        <p class="text-muted mb-0">Aucune réservation trouvée</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
