@model GESTION_LTIPN.Models.EtatSuiviVoyageViewModel

@{
    ViewData["Title"] = "État de suivi des voyages";
}

<div class="row">
    <div class="col-12 mx-auto">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="card-title mb-0">État de suivi des voyages</h4>
            </div>
            <div class="card-body">
                <!-- Filters Section -->
                <form asp-action="Index" method="get">
                    <div class="row mb-3">
                        <div class="col-md-3 mb-3">
                            <label asp-for="DateDebut" class="form-label">Date Début</label>
                            <input asp-for="DateDebut" type="date" class="form-control" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="DateFin" class="form-label">Date Fin</label>
                            <input asp-for="DateFin" type="date" class="form-control" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="NumeroBK" class="form-label">Numéro BK</label>
                            <input asp-for="NumeroBK" type="text" class="form-control" placeholder="Ex: 123456" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="NumeroTC" class="form-label">Numéro TC</label>
                            <input asp-for="NumeroTC" type="text" class="form-control" placeholder="Ex: TC001" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 mb-3">
                            <label asp-for="CamionId" class="form-label">Matricule Camion</label>
                            <select asp-for="CamionId" class="form-select select2-camion" id="camionSelect">
                                <option value="">-- Tous les camions --</option>
                                @foreach (var camion in Model.Camions)
                                {
                                    <option value="@camion.CamionId">@camion.CamionMatricule - @camion.DriverName</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="SocietyId" class="form-label">Société</label>
                            <select asp-for="SocietyId" class="form-select">
                                <option value="">-- Toutes les sociétés --</option>
                                @foreach (var society in Model.Societies)
                                {
                                    <option value="@society.SocietyId">@society.SocietyName</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="VoyageStatus" class="form-label">Statut Voyage</label>
                            <select asp-for="VoyageStatus" class="form-select">
                                <option value="">-- Tous les statuts --</option>
                                @foreach (var status in Model.VoyageStatuses)
                                {
                                    <option value="@status">@status</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="TypeVoyage" class="form-label">Type Voyage</label>
                            <select asp-for="TypeVoyage" class="form-select">
                                <option value="">-- Tous les types --</option>
                                @foreach (var type in Model.TypeVoyages)
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 mb-3">
                            <label asp-for="DepartureCity" class="form-label">Ville Départ</label>
                            <select asp-for="DepartureCity" class="form-select">
                                <option value="">-- Toutes les villes --</option>
                                @foreach (var city in Model.DepartureCities)
                                {
                                    <option value="@city">@city</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-9 mb-3 d-flex align-items-end gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="ri-filter-line me-1"></i> Filtrer
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="ri-refresh-line me-1"></i> Réinitialiser
                            </a>
                        </div>
                    </div>
                </form>

                @if (!string.IsNullOrEmpty(Model.FilteredTitle))
                {
                    <div class="alert alert-info alert-dismissible fade show mb-3" role="alert">
                        <i class="ri-information-line me-2"></i>
                        <strong>@Model.FilteredTitle</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (Model.Voyages.Any())
                {
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <span class="badge bg-primary">
                                <i class="ri-file-list-line me-1"></i>
                                @Model.Voyages.Count() résultat(s)
                            </span>
                        </div>
                        <a asp-action="ExportExcel" asp-all-route-data="@(new Dictionary<string, string>
                            {
                                { "dateDebut", Model.DateDebut?.ToString("yyyy-MM-dd") ?? "" },
                                { "dateFin", Model.DateFin?.ToString("yyyy-MM-dd") ?? "" },
                                { "numeroBK", Model.NumeroBK ?? "" },
                                { "numeroTC", Model.NumeroTC ?? "" },
                                { "camionId", Model.CamionId?.ToString() ?? "" },
                                { "societyId", Model.SocietyId?.ToString() ?? "" },
                                { "voyageStatus", Model.VoyageStatus ?? "" },
                                { "typeVoyage", Model.TypeVoyage ?? "" },
                                { "departureCity", Model.DepartureCity ?? "" }
                            })" class="btn btn-success">
                            <i class="ri-file-excel-2-line me-1"></i> Export Excel
                        </a>
                    </div>

                    <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-hover table-bordered align-middle mb-0 table-sm">
                            <thead class="table-light" style="position: sticky; top: 0; z-index: 10; background-color: #f8f9fa;">
                                <tr>
                                    <th class="text-center">N° d'opération</th>
                                    <th>Type d'opération</th>
                                    <th>Date début OP</th>
                                    <th>N° Booking</th>
                                    <th>Client</th>
                                    <th>N° TC</th>
                                    <th>Matricule 1</th>
                                    <th>Chauffeur 1</th>
                                    <th>Matricule 2</th>
                                    <th>Chauffeur 2</th>
                                    <th>Article</th>
                                    <th>Trajet</th>
                                    <th class="text-end">Prix (MAD)</th>
                                    <th>Date FIN OP</th>
                                    <th>Statut</th>
                                    <th>Progression</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int operationNumber = 1;}
                                @foreach (var item in Model.Voyages)
                                {
                                    <tr>
                                        <td class="text-center"><strong>@operationNumber</strong></td>
                                        <td>
                                            <span class="badge bg-success">@item.TypeVoyage</span>
                                        </td>
                                        <td>@item.DepartureDate</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Numero_BK))
                                            {
                                                <span class="badge bg-primary">@item.Numero_BK</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">----</span>
                                            }
                                        </td>
                                        <td>
                                            <strong>@item.SocietyPrincipale</strong>
                                            @if (!string.IsNullOrEmpty(item.SocietySecondaire))
                                            {
                                                <br /><span class="badge bg-secondary mt-1">@item.SocietySecondaire</span>
                                            }
                                        </td>
                                        <td><small class="text-muted">@item.Numero_TC</small></td>
                                        <!-- Matricule 1 -->
                                        <td>
                                            <span class="badge bg-dark">@item.CamionFirstMatricule</span>
                                        </td>
                                        <!-- Chauffeur 1 -->
                                        <td>
                                            <small>@item.CamionFirstDriver</small>
                                            @if (!string.IsNullOrEmpty(item.CamionFirstPhone))
                                            {
                                                <br /><small class="text-muted"><i class="ri-phone-line"></i> @item.CamionFirstPhone</small>
                                            }
                                        </td>
                                        <!-- Matricule 2 -->
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.CamionSecondMatricule) && item.CamionSecondMatricule != "-")
                                            {
                                                <span class="badge bg-secondary">@item.CamionSecondMatricule</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <!-- Chauffeur 2 -->
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.CamionSecondDriver) && item.CamionSecondDriver != "-")
                                            {
                                                <small>@item.CamionSecondDriver</small>
                                                @if (!string.IsNullOrEmpty(item.CamionSecondPhone))
                                                {
                                                    <br /><small class="text-muted"><i class="ri-phone-line"></i> @item.CamionSecondPhone</small>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Type_Emballage))
                                            {
                                                <strong class="text-primary">@item.Type_Emballage</strong>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <small>
                                                @if (!string.IsNullOrEmpty(item.DepartureCity) && !string.IsNullOrEmpty(item.ReturnArrivalCity))
                                                {
                                                    <text>@item.DepartureCity/DAKHLA/@item.ReturnArrivalCity</text>
                                                }
                                                else if (!string.IsNullOrEmpty(item.DepartureCity))
                                                {
                                                    <text>@item.DepartureCity/DAKHLA</text>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </small>
                                        </td>
                                        <td class="text-end">
                                            @if (item.PricePrincipale.HasValue)
                                            {
                                                <strong>@item.PricePrincipale?.ToString("N1")</strong>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                            @if (item.PriceSecondaire.HasValue)
                                            {
                                                <br /><span class="text-primary">@item.PriceSecondaire?.ToString("N1")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ReturnArrivalDate))
                                            {
                                                @item.ReturnArrivalDate
                                            }
                                            else
                                            {
                                                <span class="text-muted">///</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.VoyageStatus == "Completed")
                                            {
                                                <span class="badge bg-success">Terminé</span>
                                            }
                                            else if (item.VoyageStatus == "InProgress")
                                            {
                                                <span class="badge bg-warning">En Cours</span>
                                            }
                                            else if (item.VoyageStatus == "Planned")
                                            {
                                                <span class="badge bg-info">Planifié</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@item.VoyageStatus</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.VoyageStatus == "Planned")
                                            {
                                                <small class="text-muted">En attente de départ</small>
                                            }
                                            else if (item.VoyageStatus == "InProgress")
                                            {
                                                @if (string.IsNullOrEmpty(item.ReceptionDate))
                                                {
                                                    <small><i class="ri-checkbox-blank-circle-line text-success"></i> Parti</small><br />
                                                    <small class="text-muted">→ En route vers Dakhla</small>
                                                }
                                                else if (string.IsNullOrEmpty(item.ReturnDepartureDate))
                                                {
                                                    <small><i class="ri-checkbox-circle-fill text-success"></i> Reçu à Dakhla</small><br />
                                                    <small class="text-muted">→ En attente de retour</small>
                                                }
                                                else if (string.IsNullOrEmpty(item.ReturnArrivalDate))
                                                {
                                                    <small><i class="ri-checkbox-circle-fill text-success"></i> Parti de Dakhla</small><br />
                                                    <small class="text-muted">→ En route vers @(item.ReturnArrivalCity ?? "destination")</small>
                                                }
                                                else
                                                {
                                                    <small><i class="ri-checkbox-circle-fill text-success"></i> Voyage complet</small>
                                                }
                                            }
                                            else if (item.VoyageStatus == "Completed")
                                            {
                                                <small class="text-success"><i class="ri-checkbox-circle-fill"></i> Voyage terminé</small>
                                            }
                                            else
                                            {
                                                <small class="text-muted">-</small>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="d-flex gap-1 justify-content-center">
                                                <a asp-controller="Voyage" asp-action="Details" asp-route-id="@item.VoyageId"
                                                   class="btn btn-sm btn-outline-primary" title="Voir détails">
                                                    <i class="ri-eye-line"></i>
                                                </a>
                                                <a asp-controller="Voyage" asp-action="AssignVoyages" asp-route-bookingId="@item.BookingId"
                                                   class="btn btn-sm btn-outline-success" title="Gérer les voyages">
                                                    <i class="ri-route-line"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    operationNumber++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center py-5" role="alert">
                        <i class="ri-information-line fs-1 d-block mb-2"></i>
                        <p class="mb-0">Aucun voyage trouvé pour les filtres sélectionnés.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // Initialize Select2 for the truck dropdown
            $('.select2-camion').select2({
                theme: 'bootstrap-5',
                placeholder: '-- Tous les camions --',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Aucun camion trouvé";
                    },
                    searching: function() {
                        return "Recherche en cours...";
                    }
                }
            });
        });
    </script>
}
