@model GESTION_LTIPN.Models.User

@{
    ViewData["Title"] = "Créer un Utilisateur";
}

<div class="row">
    <div class="col-12 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Créer un nouvel utilisateur</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <div class="mb-4">
                        <label asp-for="Username" class="form-label">Nom d'utilisateur <span class="text-danger">*</span></label>
                        <input asp-for="Username" class="form-control" required />
                        <span asp-validation-for="Username" class="text-danger"></span>
                        <small class="text-muted">Utilisé pour la connexion</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label">Mot de passe <span class="text-danger">*</span></label>
                        <input asp-for="Password" class="form-control" type="password" required minlength="4" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <small class="text-muted">Minimum 4 caractères</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Role" class="form-label">Rôle <span class="text-danger">*</span></label>
                            <select asp-for="Role" class="form-select" asp-items="ViewBag.Roles" required>
                                <option value="">-- Sélectionnez un rôle --</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="SocietyId" class="form-label">Société</label>
                            <select asp-for="SocietyId" class="form-select" asp-items="ViewBag.Societies">
                                <option value="">-- Non assigné --</option>
                            </select>
                            <span asp-validation-for="SocietyId" class="text-danger"></span>
                            <small class="text-muted">Optionnel pour Admin</small>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                Utilisateur actif
                            </label>
                        </div>
                        <small class="text-muted">Les utilisateurs inactifs ne peuvent pas se connecter</small>
                    </div>

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="ri-arrow-left-line me-1"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="ri-save-line me-1"></i> Créer l'utilisateur
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body bg-light-subtle">
                <h6 class="fw-semibold mb-2"><i class="ri-information-line me-1"></i> Rôles</h6>
                <ul class="mb-0 small text-muted">
                    <li><strong>Administrateur</strong> : Accès complet au système, gestion des utilisateurs, sociétés et camions</li>
                    <li><strong>Agent de Réservation</strong> : Peut créer et gérer les réservations de sa société</li>
                    <li><strong>Responsable Transport</strong> : Valide les réservations et gère les voyages</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
