@model GESTION_LTIPN.Models.VoyageViewModel

@{
    ViewData["Title"] = "Modifier un Voyage";
}

<div class="row">
    <div class="col-12 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Modifier le voyage - @Model.BookingReference</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="VoyageId" />
                    <input type="hidden" asp-for="BookingId" />

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <div class="alert alert-info">
                        <i class="ri-information-line me-1"></i>
                        Modification du voyage numéro <strong>@Model.VoyageNumber</strong>
                    </div>

                    <!-- Voyage Number -->
                    <div class="mb-4">
                        <label asp-for="VoyageNumber" class="form-label">Numéro de Voyage <span class="text-danger">*</span></label>
                        <input asp-for="VoyageNumber" type="number" class="form-control" placeholder="Entrez le numéro de voyage" required />
                        <span asp-validation-for="VoyageNumber" class="text-danger"></span>
                        <small class="text-muted">Numéro séquentiel du voyage dans la réservation</small>
                    </div>

                    <!-- Numero TC -->
                    <div class="mb-4">
                        <label asp-for="Numero_TC" class="form-label">Numéro TC <span class="text-danger">*</span></label>
                        <input asp-for="Numero_TC" class="form-control" placeholder="Entrez le numéro TC" required />
                        <span asp-validation-for="Numero_TC" class="text-danger"></span>
                        <small class="text-muted">Numéro d'identification du transport (obligatoire)</small>
                    </div>

                    <!-- Society Principale (Read-only from booking) -->
                    <div class="mb-4">
                        <label class="form-label">Société principale</label>
                        <input type="text" class="form-control" value="@Model.SocietyPrincipaleName" readonly disabled />
                        <input type="hidden" asp-for="SocietyPrincipaleId" />
                        <small class="text-muted">Société de la réservation (non modifiable)</small>
                    </div>

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="AssignVoyages" asp-route-bookingId="@Model.BookingId" class="btn btn-secondary">
                            <i class="ri-arrow-left-line me-1"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="ri-save-line me-1"></i> Enregistrer les modifications
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body bg-light-subtle">
                <h6 class="fw-semibold mb-2"><i class="ri-information-line me-1"></i> Informations</h6>
                <ul class="mb-0 small text-muted">
                    <li>Seuls les voyages au statut <strong>"Planifié"</strong> peuvent être modifiés</li>
                    <li>La <strong>société principale</strong> est automatiquement celle de la réservation et ne peut pas être modifiée</li>
                    <li>Les informations de <strong>départ, camions et dates</strong> sont modifiables dans leurs sections respectives</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
