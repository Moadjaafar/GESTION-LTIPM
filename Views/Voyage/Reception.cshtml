@model GESTION_LTIPN.Models.VoyageViewModel

@{
    ViewData["Title"] = "Réception à Dakhla";
}

<div class="row">
    <div class="col-12 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Enregistrer la réception à Dakhla - @Model.BookingReference</h4>
            </div>
            <div class="card-body">
                <form asp-action="Reception" method="post">
                    <input type="hidden" asp-for="VoyageId" />
                    <input type="hidden" asp-for="BookingId" />
                    <input type="hidden" asp-for="VoyageNumber" />
                    <input type="hidden" asp-for="Numero_TC" />
                    <input type="hidden" asp-for="DepartureCity" />
                    <input type="hidden" asp-for="DepartureType" />

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <div class="alert alert-info">
                        <i class="ri-information-line me-1"></i>
                        Voyage numéro <strong>@Model.VoyageNumber</strong>
                    </div>

                    <!-- Read-only voyage information -->
                    <div class="card mb-4 bg-light">
                        <div class="card-body">
                            <h6 class="fw-semibold mb-3">Informations du voyage</h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted small">Société principale</label>
                                    <p class="mb-0">@Model.SocietyPrincipaleName</p>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.SocietySecondaireName))
                                {
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted small">Société secondaire</label>
                                        <p class="mb-0">@Model.SocietySecondaireName</p>
                                    </div>
                                }
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted small">Ville de départ</label>
                                    <p class="mb-0">@Model.DepartureCity</p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted small">Date de départ</label>
                                    <p class="mb-0">
                                        @if (Model.DepartureDate.HasValue)
                                        {
                                            @Model.DepartureDate.Value.ToString("dd/MM/yyyy")
                                            if (Model.DepartureTime.HasValue)
                                            {
                                                <text> à @Model.DepartureTime.Value.ToString(@"hh\:mm")</text>
                                            }
                                        }
                                    </p>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.CamionFirstMatricule))
                                {
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted small">Camion (1er départ)</label>
                                        <p class="mb-0">@Model.CamionFirstMatricule</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Reception Date and Time -->
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="ReceptionDate" class="form-label">Date de réception à Dakhla <span class="text-danger">*</span></label>
                            <input asp-for="ReceptionDate" class="form-control" type="date" required />
                            <span asp-validation-for="ReceptionDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="ReceptionTime" class="form-label">Heure de réception</label>
                            <input asp-for="ReceptionTime" class="form-control" type="time" />
                            <span asp-validation-for="ReceptionTime" class="text-danger"></span>
                            <small class="text-muted">Optionnel</small>
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="AssignVoyages" asp-route-bookingId="@Model.BookingId" class="btn btn-secondary">
                            <i class="ri-arrow-left-line me-1"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="ri-checkbox-circle-line me-1"></i> Enregistrer la réception
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body bg-light-subtle">
                <h6 class="fw-semibold mb-2"><i class="ri-information-line me-1"></i> Information</h6>
                <ul class="mb-0 small text-muted">
                    <li>Enregistrez l'arrivée du voyage à <strong>Dakhla</strong></li>
                    <li>La date de réception est obligatoire, l'heure est optionnelle</li>
                    <li>La date de réception doit être postérieure ou égale à la date de départ</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
