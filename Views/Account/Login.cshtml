@model GESTION_LTIPN.Models.LoginViewModel

@{
    ViewData["Title"] = "Connexion";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>Connexion - LTIPM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta content="LTIPM Management System" name="description" />
    <meta content="LTIPM" name="author" />

    <!-- layout setup -->
    <script type="module" src="~/assets/js/layout-setup.js"></script>

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.png">
    <!-- Simplebar Css -->
    <link rel="stylesheet" href="~/assets/libs/simplebar/simplebar.min.css">
    <!-- Swiper Css -->
    <link href="~/assets/libs/swiper/swiper-bundle.min.css" rel="stylesheet">
    <!-- Nouislider Css -->
    <link href="~/assets/libs/nouislider/nouislider.min.css" rel="stylesheet">
    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css">
    <!--icons css-->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css">
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
    <style>
        .logo-txt {
            font-size: 16px;
            color: #000000 !important;
            font-family: "Roboto Slab", serif;
            font-weight: 900 !important;
            text-shadow: 2px 2px 4px rgba(255,255,255,0.8);
        }

        /* Background image styling */
        .login-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/assets/images/bg_cnx1.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            z-index: -1;
        }

        /* Dark overlay for better readability */
        .login-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(6, 68, 130, 0.85) 0%, rgba(0, 0, 0, 0.7) 100%);
            z-index: 0;
        }

        /* Enhanced card styling */
        .login-card {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Logo styling */
        .logo-main img {
            filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.5));
        }

        /* All text elements black */
        .login-card h3,
        .login-card p,
        .login-card label,
        .login-card .form-label,
        .login-card .form-check-label {
            color: #000000 !important;
        }

        /* Muted text also black */
        .login-card .text-muted {
            color: #333333 !important;
        }

        /* Input placeholder */
        .login-card input::placeholder {
            color: #666666 !important;
        }
    </style>
</head>

<body>
    <!-- Background image -->
    <div class="login-bg"></div>

    <!-- Dark overlay -->
    <div class="login-overlay"></div>


    <div class="container" style="position: relative; z-index: 10;">
        <div class="row justify-content-center align-items-center min-vh-100 pt-20 pb-10">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card mx-xxl-8 login-card">
                    <div class="d-flex justify-content-center align-content-center">
                        <img width="140" class="logo-dark logo_login" alt="Logo" src="~/assets/images/favicon.png">
                    </div>
                    <div class="card-body p-8">
                        <h3 class="fw-medium text-center">Bienvenue!</h3>
                        <p class="mb-8 text-muted text-center">Connectez-vous Ã  votre compte</p>

                        <form asp-action="Login" method="post">
                            <input type="hidden" name="ReturnUrl" value="@Model?.ReturnUrl" />

                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger" role="alert">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                            }

                            <div class="mb-4">
                                <label asp-for="Username" class="form-label">Nom d'utilisateur <span class="text-danger">*</span></label>
                                <input asp-for="Username" type="text" class="form-control" placeholder="Entrez votre nom d'utilisateur" required autofocus>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label">Mot de passe <span class="text-danger">*</span></label>
                                <div class="position-relative">
                                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Entrez votre mot de passe" required>
                                    <button type="button" class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted toggle-password" id="toggle-password" data-target="password">
                                        <i class="ri-eye-off-line align-middle"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="my-6">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe">
                                        <label asp-for="RememberMe" class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <button type="submit" class="btn btn-primary w-100 mb-4">
                                    <i class="ri-login-box-line me-1"></i> Connexion
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JAVASCRIPT -->
    <script src="~/assets/libs/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/js/scroll-top.init.js"></script>
    <script src="~/assets/js/auth/auth.init.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
