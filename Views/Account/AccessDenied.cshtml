@{
    ViewData["Title"] = "Accès refusé";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>Accès refusé - LTPM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link rel="shortcut icon" href="~/assets/images/favicon.png">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-12 col-md-6 col-lg-5">
                <div class="card shadow-none text-center">
                    <div class="card-body p-8">
                        <div class="mb-6">
                            <i class="ri-error-warning-line text-danger" style="font-size: 72px;"></i>
                        </div>
                        <h3 class="fw-medium mb-3">Accès refusé</h3>
                        <p class="text-muted mb-6">Vous n'avez pas l'autorisation d'accéder à cette page.</p>
                        <div class="d-flex gap-3 justify-content-center">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                <i class="ri-home-line me-1"></i> Retour à l'accueil
                            </a>
                            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">
                                <i class="ri-login-box-line me-1"></i> Se connecter
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
